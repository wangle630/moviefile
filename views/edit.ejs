<%- include header %>
<div class="col-md-9">
    <div class="well">
<form method="post">
    标题：<br />
    <input type="text" name="title" value="<%= post.title %>" disabled="disabled" /><br />
    正文：<br />
    <textarea name="post" class="form-control" rows="20" ><%= post.post %></textarea><br />
    <input type="submit" class="btn btn-success"  value="保存修改" />
    标签：<br />
    <% if(post.tags) {%>
        tag1 <input type="text" name="tag1" value="<%= post.tags[0] %>"   /><br />
        tag2 <input type="text" name="tag2" value="<%= post.tags[1] %>"   /><br />
        tag3 <input type="text" name="tag3" value="<%= post.tags[2] %>"   /><br />
    <% } %>
</form>
    </div>
</div>
<%- include footer %>