<div class="bs-example" data-example-id="hoverable-table">
    <table class="table table-hover">
        <thead>
        <tr>
            <th>#</th>
            <th>头像</th>
            <th>用户名</th>
            <th>回复时间</th>
            <th>内容</th>
        </tr>
        </thead>
        <tbody>
        <% if (post.comments) { %>
        <% post.comments.forEach(function (comment, index) { %>
        <div style="padding-left: 4em;">
            <tr>
                <th>#</th>
                <th><img src="<%=comment.head %>" class="l_head" /><a href="<%= comment.website%>"><%= comment.name %></a></th>
                <th><a href="<%= comment.website %>"><%= comment.name %></a></th>
                <th><span class="info"><%= comment.time %></span></th>
                <th><%- comment.content %></th>
            </tr>
        </div>
        <% }) %>
        <% } %>
        </tbody>
    </table>
</div>




<form class="form-inline" method="post">
    <div class="col-sm-10">
    <% if (user) { %>

        姓名：<input type="text" class="form-control" name="name" value="<%= user.name %>" /><br />
        <br />
        邮箱：<input type="text" class="form-control" name="email" value="<%= user.email %>" /><br />
        <br />
        网址：<input type="text" class="form-control" name="website" value="/u/<%= user.name %>" /><br />
        <br />


    <% } else { %>

        姓名：<input type="text" class="form-control" name="name" /><br />
        <br />
        邮箱：<input type="text" class="form-control" name="email" /><br />
        <br />
        网址：<input type="text" class="form-control" name="website" value="http://" /><br />
        <br />

    <% } %>
    </div>
    <textarea name="content" rows="5" cols="80"></textarea><br />
    <input type="submit" class="btn btn-success" value="留言" />
</form>


