<%- include header %>
<div class="col-md-9">

    <% posts.forEach(function (post, index) { %>

    <div class="well">
        <h5 class="pull-right">
            <p>
            <h2><a href="/u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>"><%= post.title %></a></h2>
            <% post.name %>
            </p>
            作者：<a href="/u/<%= post.name %>"><%= post.name %></a> |
            日期：<%= post.time.minute %> ｜


            标签：
            <% if (post.tags) { %>
            <% post.tags.forEach(function (tag) { %>
                <% if (tag) { %>
                    <a class="tag" href="/tags/<%= tag %>"><%= tag %></a>
                <% } %>
            <% }) %>
            <% } %>

        </h5>
        <p><%- post.post %></p>
        <% if (post.comments && post.pv) { %>
        <p class="info">阅读：<%= post.pv %> ｜ 评论：<%= post.comments.length %></p>
        <% } %>
    </div>
    <% }) %>
    <%- include paging %>
</div>


<%- include footer %>
